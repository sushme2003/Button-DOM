<script> 
    function f1(){
        const f=document.getElementById("first");
        const b=document.getElementById("body");
        f.style.backgroundColor="red";
        b.style.backgroundColor="red"
        }
        function f2(){
            const s=document.getElementById("second");
            const b=document.getElementById("body");
            s.style.backgroundColor="blue";
            b.style.backgroundColor="blue"
        }
        function f3(){
            const t=document.getElementById("third");
            const b=document.getElementById("body");
            t.style.backgroundColor="green"
            b.style.backgroundColor="green";

        }
        function f4(){
            const r=document.getElementById("reset");
            const b=document.getElementById("body");
            b.style.backgroundColor="beige";
            const f1=document.getElementById("first");
            const f2=document.getElementById("second");
            const f3=document.getElementById("third");
            f1.style.backgroundColor="beige";
            f2.style.backgroundColor="beige";
            f3.style.backgroundColor="beige";




